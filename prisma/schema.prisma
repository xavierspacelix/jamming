generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Room {
  id        String    @id @default(cuid())
  code      String    @unique
  host      String
  createdAt DateTime  @default(now())
  requests  Request[]
}

model Request {
  id          String   @id @default(cuid())
  videoId     String
  title       String
  channel     String
  thumbnail   String
  requestedBy String
  order       Int // urutan antrian manual
  createdAt   DateTime @default(now())

  room   Room   @relation(fields: [roomId], references: [id])
  roomId String
}
